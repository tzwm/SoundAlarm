<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/bj2" android:id="@+id/back">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/topView" android:layout_gravity="center" android:background="#735765"
            android:textColor="#ffffff"
            android:textSize="54sp"
            android:typeface="normal" android:textStyle="bold" android:gravity="center_vertical|center_horizontal"/>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="450dp"
            >

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="center">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Time"
                        android:id="@+id/btnTime" android:layout_column="0" android:layout_weight="1"
                        android:alpha="0"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Repeat"
                        android:id="@+id/btnRepeat" android:layout_column="1" android:layout_weight="1"
                        android:alpha="0"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Ringtone"
                        android:id="@+id/btnDel" android:layout_column="0" android:layout_weight="1" android:alpha="0"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Type"
                        android:id="@+id/btnMem" android:layout_column="1" android:layout_weight="1" android:alpha="0"/>
            </TableRow>
        </TableLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/turntable" android:src="@drawable/turntable" android:layout_gravity="center"/>

        <Button
            android:id="@+id/onoff"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:alpha="0" />

        <AbsoluteLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn0" android:layout_gravity="center_horizontal" android:layout_x="163dp"
                    android:layout_y="80dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn1" android:layout_gravity="center_horizontal" android:layout_x="246dp"
                    android:layout_y="118dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn2" android:layout_gravity="center_horizontal" android:layout_x="280dp"
                    android:layout_y="200dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn3" android:layout_gravity="center_horizontal" android:layout_x="242dp"
                    android:layout_y="284dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn4" android:layout_gravity="center_horizontal" android:layout_x="163dp"
                    android:layout_y="323dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn5" android:layout_gravity="center_horizontal" android:layout_x="74dp"
                    android:layout_y="284dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn6" android:layout_gravity="center_horizontal" android:layout_x="41dp"
                    android:layout_y="200dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
            <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/btn7" android:layout_gravity="center_horizontal" android:layout_x="70dp"
                    android:layout_y="118dp" android:background="@drawable/newalarm" android:baselineAlignBottom="true"/>
        </AbsoluteLayout>
    </FrameLayout>

</LinearLayout>